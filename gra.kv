#:kivy 1.0.9
#: import FadeTransition kivy.uix.screenmanager.FadeTransition

ScreenManager:
    transition: FadeTransition()
    Menu:
    Quiz1:
    Quiz2:
    Quiz3:
    Quiz4:
    Quiz5:
    Quiz6:
    Quiz7:
    Quiz8:

<Electron>:
    canvas:
        Ellipse:
            source: "elektron.png"
            pos: self.pos
            size: 50, 50
<Buzka>:
    canvas:
        Ellipse:
            source: "buzka.png"
            pos: self.pos
            size: 100, 100
<Logo>:
    canvas.before:
        Rectangle:
            source: "solaris.png"
            pos: self.pos
            size: root.width, root.height

<Menu>:
    name: "main"

    FloatLayout:
        Logo:
            id: solaris

    Button:
        on_release: app.root.current = "pytanie1"
        text: str(root.start)
        size_hint: 0.3, 0.2
        font_size: 25
        top: root.height/4
        center_x: root.width/2 - 100

    Label:
        color: 0, 0, 0, 1
        font_size: 40
        center_x: self.width / 2 - 20
        top: 1.5 * self.height - 100
        text: str(root.nazwaGry)

